// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ArtistSnapshot {
  id               String   @id @default(cuid())
  artistName       String
  country          String   @default("global")
  rank             Int
  monthlyListeners Int
  listenersDelta   Int?
  createdAt        DateTime @default(now())
  
  @@index([createdAt])
  @@index([artistName])
  @@index([country])
}

model ArtistCurrent {
  id               String   @id @default(cuid())
  artistId         String?  // Spotify ID if matched
  artistName       String
  country          String   @default("global") // "global" or country code like "nl"
  rank             Int
  previousRank     Int?
  rankDelta        Int?     // negative = moved up, positive = moved down
  monthlyListeners Int
  listenersDelta   Int?
  imageUrl         String?
  genres           String?  // JSON array as string
  spotifyUrl       String?
  lastUpdated      DateTime @default(now()) @updatedAt
  
  @@unique([artistName, country])
  @@index([rank])
  @@index([artistName])
  @@index([country])
}

model TrackSnapshot {
  id           String   @id @default(cuid())
  trackName    String
  artistName   String
  country      String   @default("global")
  rank         Int
  dailyStreams BigInt
  totalStreams BigInt?
  createdAt    DateTime @default(now())
  
  @@index([createdAt])
  @@index([trackName, artistName])
  @@index([country])
}

model TrackCurrent {
  id           String   @id @default(cuid())
  trackId      String? // Spotify ID if matched
  trackName    String
  artistName   String
  country      String   @default("global") // "global" or country code like "nl"
  rank         Int
  previousRank Int?
  rankDelta    Int?     // negative = moved up, positive = moved down
  dailyStreams BigInt
  totalStreams BigInt?
  imageUrl     String?
  previewUrl   String?
  spotifyUrl   String?
  lastUpdated  DateTime @default(now()) @updatedAt
  
  @@unique([trackName, artistName, country])
  @@index([rank])
  @@index([trackName, artistName])
  @@index([country])
}

